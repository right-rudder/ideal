<div x-data="{ currentPage: 1 }" class="max-w-sm px-5">
  <%= form_with(model: quiz_result, class: "contents") do |form| %>
    <% if quiz_result.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(quiz_result.errors.count, "error") %> prohibited this quiz_result from being saved:</h2>

        <ul>
          <% quiz_result.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div x-show="currentPage === 1" class="flex flex-col justify-between">
      <div class="">
        <div class="my-5">
          <%= form.label :first_name, class: "text-slate-700 font-semibold text-lg" %>
          <%= form.text_field :first_name, class: "block rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-ideal-blue focus:ring-ideal-blue" %>
        </div>

        <div class="my-5">
          <%= form.label :last_name, class: "text-slate-700 font-semibold text-lg" %>
          <%= form.text_field :last_name, class: "block rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-ideal-blue focus:ring-ideal-blue" %>
        </div>

        <div class="my-5 flex flex-col">
          <%= form.label :email, class: "text-slate-700 font-semibold text-lg" %>
          <%= form.email_field :email, class: "block rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-ideal-blue focus:ring-ideal-blue" %>
        </div>

        <div class="my-5 flex flex-col">
          <span class="text-slate-700 font-semibold text-lg">Phone</span>
          <%= form.text_field :phone, class: "block rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-ideal-blue focus:ring-ideal-blue" %>
        </div>

        <div class="inline">
          <input type="button" x-on:click="currentPage = 2" class="btn-primary" value="NEXT">
        </div>
      </div>
    </div>

    <div x-show="currentPage === 2" class="flex flex-col justify-between" x-cloak>
      <%# PROGRAM %>
      <div class="my-5" x-data="{ program: '' }">
        <span class="text-slate-700 text-lg font-semibold">What type of training are you interested in?</span>
        <div class="grid grid-cols-2 mt-5 gap-3">
          <% availability_options = ['Helicopters', 'Airplanes'] %>
          <% availability_options.each do |option| %>
            <label class="">
              <%= form.radio_button :program, option, { class: "hidden", "data-x-model" => "program" } %>
              <span class="relative">
                <span class="inline-flex items-center justify-center text-slate-700 border border-slate-300 rounded-md bg-slate-50 w-5/6" :class="{ 'bg-ideal-blue': program == '<%= option %>' }">
                  <span class="px-4 py-2 font-sans text-base text-slate-800" :class="{ 'text-slate-50': program == '<%= option %>' }"><%= option %></span>
                </span>
                <span class="absolute top-0 bottom-0 left-0 right-0 cursor-pointer" @click="program = '<%= option %>'"></span>
              </span>
            </label>
          <% end %>
        </div>
      </div>

      <%# WHY BECOME A PILOT? %>
      <div class="mt-5" x-data="{ reasons: [], otherReason: '' }">
        <div class="text-slate-700 font-semibold text-lg mb-2">Why do you want to become a pilot? (select all that apply)</div>
        
        <div class="flex items-center mb-2">
          <input type="checkbox" x-model="reasons" value="Adventure" class="form-checkbox h-5 w-5 text-blue-600">
          <span class="ml-2 text-slate-700">Adventure</span>
        </div>
        
        <div class="flex items-center mb-2">
          <input type="checkbox" x-model="reasons" value="Career" class="form-checkbox h-5 w-5 text-blue-600">
          <span class="ml-2 text-slate-700">Career</span>
        </div>
        
        <div class="flex items-center mb-2">
          <input type="checkbox" x-model="reasons" value="Hobby" class="form-checkbox h-5 w-5 text-blue-600">
          <span class="ml-2 text-slate-700">Hobby</span>
        </div>
        
        <div class="flex items-center mb-2">
          <input type="checkbox" x-model="reasons" value="Other" class="form-checkbox h-5 w-5 text-blue-600">
          <span class="ml-2 text-slate-700">Other:</span>
        </div>
        
        <div x-show="reasons.includes('Other')" class="mb-2">
          <textarea type="text"
            x-model="otherReason"
            x-init="otherReason = ''"
            placeholder="Enter other reasons why you want to become a pilot"
            rows=4
            class="form-textarea mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 placeholder-slate-500"
          ></textarea>
        </div>
        <%= form.hidden_field :why_pilot, "x-bind:value": "reasons.concat(otherReason ? [otherReason] : []).join(', ')" %>
      </div>

      <div class="my-5">
        <span class="text-slate-700 font-semibold text-lg">What are your aviation goals?</span>
        <%= form.text_area :goals, rows: 4, class: "block rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-ideal-blue focus:ring-ideal-blue" %>
      </div>

      <div class="flex justify-between">
        <input type="button" class="btn-primary" @click="currentPage--" :disabled="currentPage === 1" value="PREVIOUS">
        <input type="button" class="btn-primary" @click="currentPage++" value="NEXT">
      </div>

    </div>

    <div x-show="currentPage === 3" class="flex flex-col justify-between" x-cloak>

      <div class="my-5">
        <span class="text-slate-700 font-semibold text-lg">Do you have any previous training?</span>
        <%= form.select(:previous_training,  
          ['','Never piloted an aircraft before', 'I\'ve flown flight simulators or drones', 'A few hours but never soloed', 'I\'m working on a checkride'] , 
          {},
          {:class => 'block rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-ideal-blue focus:ring-ideal-blue'}) 
        %>
      </div>

      <div class="my-5">
        <span class="text-slate-700 font-semibold text-lg">How do you learn best?</span>
        <%= form.select(:learn_style,  
          ['','doing', 'watching', 'reading'] , 
          {},
          {:class => 'block rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-ideal-blue focus:ring-ideal-blue'}) 
        %>
      </div>

      <div class="my-5">
        <span class="text-slate-700 font-semibold text-lg">Do you prefer to have a lot of structure and clear expectations, or do you prefer a more flexible approach?</span>
        <%= form.select(:structure,  
          ['','I prefer a structured approach', 'I prefer a flexible approach'] , 
          {},
          {:class => 'block rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-ideal-blue focus:ring-ideal-blue'}) 
        %>
      </div>

      <div class="my-5">
        <span class="text-slate-700 font-semibold text-lg">What kind of guidance and support would you prefer from your flight instructor?</span>
        <%= form.select(:feedback,  
          ['','I prefer a structured approach', 'I prefer a flexible approach'] , 
          {},
          {:class => 'block rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-ideal-blue focus:ring-ideal-blue'}) 
        %>
      </div>

      <div class="my-5">
        <%= form.label :wings_lift %>
        <%= form.text_area :wings_lift, rows: 4, class: "block rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-ideal-blue focus:ring-ideal-blue" %>
      </div>

      <div class="my-5">
        <%= form.label :schedule_visit %>
        <%= form.check_box :schedule_visit, class: "block mt-2 h-5 w-5" %>
      </div>

      <div class="my-5">
        <%= form.label :preferred_date %>
        <%= form.date_field :preferred_date, class: "block rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-ideal-blue focus:ring-ideal-blue" %>
      </div>

      <div class="my-5">
        <%= form.label :preferred_availability %>
        <%= form.text_field :preferred_availability, class: "block rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-ideal-blue focus:ring-ideal-blue" %>
      </div>

      <div class="my-5">
        <%= form.label :alternate_date %>
        <%= form.date_field :alternate_date, class: "block rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-ideal-blue focus:ring-ideal-blue" %>
      </div>

      <div class="my-5">
        <%= form.label :alternate_availability %>
        <%= form.text_field :alternate_availability, class: "block rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-ideal-blue focus:ring-ideal-blue" %>
      </div>

      <div class="my-5">
        <%= form.label :comments %>
        <%= form.text_area :comments, rows: 4, class: "block rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-ideal-blue focus:ring-ideal-blue" %>
      </div>

      <div class="inline">
        <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>